<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="keywords" content="{{ global_keywords }}">
    <meta name="description" content="{{ global_description }}">
    <meta name="author" content="">
    <title>{% block title %}{{ global_title }}{% endblock %}</title>
    {% block stylesheets %}
        <link href="{{ asset('css/font-awesome.css') }}" rel="stylesheet">
        <link href='https://fonts.googleapis.com/css?family=Vollkorn' rel='stylesheet' type='text/css'>
        <link href='https://fonts.googleapis.com/css?family=Open+Sans' rel='stylesheet' type='text/css'>
        <link href="{{ asset('css/bootstrap.css') }}" rel="stylesheet" type="text/css">
        <link rel="stylesheet" type="text/css" href="{{ asset('css/slick.css') }}">
        <link rel="stylesheet" href="{{ asset('css/jquery.fancybox.css') }}" type="text/css" media="screen"/>
        <link id="switcher" href="{{ asset('css/theme-color/default-theme.css') }}" rel="stylesheet">
        <link href="{{ asset('css/style.css') }}" rel="stylesheet" type="text/css">
        <link href="{{ asset('css/datepicker/daterangepicker.css') }}" rel="stylesheet" type="text/css"/>
        <link href="{{ asset('css/rating/star-rating.css') }}" rel="stylesheet" type="text/css">
        <link href="{{ asset('css/select2/select2.css') }}" rel="stylesheet" type="text/css">
        <link href="{{ asset('css/mios/mio.css') }}" rel="stylesheet" type="text/css">
    {% endblock %}
</head>
<body>
<div id="aa-preloader-area">
    <div class="pulse"></div>
</div>
<a class="scrollToTop" href="#"><i class="fa fa-angle-double-up"></i></a>
{% if app.request.attributes.get('_route') != 'registro_two'  and app.request.attributes.get('_route') != 'registro_three' %}
    <div class="lang">
        <div class="move btn-group">
            <button id="lang_button" class="btn btn-default btn-sm dropdown-toggle" type="button"
                    data-toggle="dropdown">
                <i class="glyphicon glyphicon-flag"></i> {{ 'lang.title' | trans({}, 'base') }} <span
                        class="caret"></span>
            </button>

            <ul class="dropdown-menu">
                <li><a href="{{ path(app.request.attributes.get('_route'),{'_locale': 'es'}) }}"> <img
                                src="{{ asset('images/lang/ES.png') }}"
                                class="mini"> {{ 'lang.es' | trans({}, 'base') }} </a></li>
                <li><a href="{{ path(app.request.attributes.get('_route'),{'_locale': 'en'}) }}"> <img
                                src="{{ asset('images/lang/EN.png') }}"
                                class="mini"> {{ 'lang.en' | trans({}, 'base') }} </a></li>
            </ul>

        </div>
    </div>
{% endif %}
<section id="aa-menu-area">
    <nav class="navbar navbar-default main-navbar" role="navigation">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar"
                        aria-expanded="false" aria-controls="navbar">
                    <span class="sr-only">Toggle navigation </span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand aa-logo" href="{{ path('homepage') }}"> {{ global_title }}</a>
            </div>
            <div id="navbar" class="navbar-collapse collapse">
                <ul id="top-menu" class="nav navbar-nav navbar-right aa-main-nav">
                    <li><a class="back_ligero" href="{{ path('homepage') }}">{{ 'menu.home' | trans({}, 'base') }}</a>
                    </li>
                    <li><a href="{{ path('casas_todas') }}">{{ 'menu.places' | trans({}, 'base') }}</a></li>
                    <li><a href="{{ path('gallery_front') }}">{{ 'menu.gallery' | trans({}, 'base') }}</a></li>
                    <li><a href="{{ path('registro') }}">{{ 'menu.join' | trans({}, 'base') }}</a></li>
                    {% if is_granted('ROLE_ADMIN') %}
                        <li><a href="{{ path('dashboard') }}">ADMIN</a></li>
                    {% endif %}
                </ul>
            </div>
        </div>
    </nav>
</section>
{% block body %}

{% endblock %}
<footer id="aa-footer">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="aa-footer-area">
                    <div class="row">
                        <div class="col-md-3 col-sm-6 col-xs-12">
                            <div class="aa-footer-left">
                                <p>{{ global_title }} &copy; 2017</p>
                            </div>
                        </div>
                        <div class="col-md-3 col-sm-6 col-xs-12">
                            <div class="aa-footer-middle">
                                <a href="#"><i class="fa fa-facebook"></i></a>
                                <a href="#"><i class="fa fa-twitter"></i></a>
                                <a href="#"><i class="fa fa-google-plus"></i></a>
                                <a href="#"><i class="fa fa-youtube"></i></a>
                            </div>
                        </div>
                        <div class="col-md-6 col-sm-12 col-xs-12">
                            <div class="aa-footer-right">
                                <a class="back_ligero"
                                   href="{{ path('homepage') }}">{{ 'menu.home' | trans({}, 'base') }}</a>
                                <a href="{{ path('casas_todas') }}">{{ 'menu.places' | trans({}, 'base') }}</a>
                                <a href="{{ path('gallery_front') }}">{{ 'menu.gallery' | trans({}, 'base') }}</a>
                                <a href="{{ path('registro') }}">{{ 'menu.join' | trans({}, 'base') }}</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</footer>
<!-- / Footer -->
{% block javascripts %}
    <!-- recaptcha API -->
    <script src="https://www.google.com/recaptcha/api.js" async defer></script>
    <!-- jQuery library -->
    <script src="{{ asset('js/jquery.min.js') }}"></script>
    <!-- Include all compiled plugins (below), or include individual files as needed -->
    <script src="{{ asset('js/bootstrap.js') }}"></script>
    <!-- slick slider -->
    <script type="text/javascript" src="{{ asset('js/slick.js') }}"></script>
    <!-- mixit slider -->
    <script type="text/javascript" src="{{ asset('js/jquery.mixitup.js') }}"></script>
    <!-- Add fancyBox -->
    <script type="text/javascript" src="{{ asset('js/jquery.fancybox.pack.js') }}"></script>
    <!-- Custom js -->
    <script src="{{ asset('js/custom.js') }}"></script>
    <!-- Scripts del datepicker -->
    {#<script type="text/javascript" src="{{ asset('js/datepicker/bootstrap-datepicker.js') }}"></script>#}
    <script type="text/javascript" src="{{ asset('js/datepicker/moment.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('js/datepicker/daterangepicker.js') }}"></script>
    <!-- Mios -->
    <script src="{{ asset('js/rating/star-rating.js') }}"></script>
    <script src="{{ asset('js/select2/select2.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('js/location/locationpicker.jquery.js') }}"></script>
    <script src="{{ asset('js/mios/mio.js') }}"></script>
{% endblock %}
</body>
</html>
