{% extends 'simple.html.twig' %}

{% block body %}
    <section id="aa-signin">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="aa-signin-area">
                        <div class="aa-signin-form">
                            <div class="aa-signin-form-title">
                                <a class="aa-property-home" href="{{ path('homepage') }}">Property Home</a>
                                <h4>Administration Panel</h4>
                            </div>
                            <form action="{{ path('login') }}" method="post">
                                <div class="aa-single-field">
                                    <label for="username">Name <span class="required">*</span></label>
                                    <input type="text" id="username" name="_username" value="{{ last_username }}"
                                           required=""/>
                                </div>
                                <div class="aa-single-field">
                                    <label for="password">Password <span class="required">*</span></label>
                                    <input class="pass" type="password" id="password" name="_password" required=""/>
                                </div>
                                {% if error %}
                                    <p>{{ error.messageKey|trans(error.messageData, 'security') }}</p>
                                {% endif %}
                                <div class="aa-single-submit">
                                    <input type="submit" value="Log in" class="aa-browse-btn" name="submit">
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
